<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">

      <div class="box bordered">
        <div class="box inner light-gray">
          <div class="box-header">
              <i class="icon-group"></i> Recursos Humanos - Projeção Pessoal
            </div>
        </div>

        <div class="row-fluid">
          <div class="span12">
            <div class="padded">
              <div class="section-title">Projeção Pessoal</div>
              <div style="height: 190px">
              <%= simple_form_for :filtros, :url => "/rh/projecao_pessoal", :remote => true, :html => {:class => 'span12 form-vertical filtro_relatorio'} do |f| %>
                <%= f.input :ano, :collection => ["2009", "2010", "2011", "2012", "2013"], :required => false, :label => "Ano", :prompt => "Selecione", :input_html => {:class => 'span2'}, :wrapper_html => {:class => ''} %>
                <%
                  departamentos = Hash.new
                  Departamento.all.each do |departamento|
                    departamentos[departamento.nome] = departamento.id
                  end
                %>
                <%= f.input :dapartamento, :collection => departamentos, :required => false, :label => "Departamento", :prompt => "Selecione", :input_html => {:class => 'span2'}, :wrapper_html => {:class => ''} %>
                <%= f.button :submit, "Gerar Relatório" %>
              <% end %>
              </div>
              <div class="chart" id="chart_div" style="width: 100%; height: 330px;"></div>
            </div>
          </div>
        </div>
      
      </div>
      
    </div>
  </div>
</div>
