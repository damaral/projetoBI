<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">

      <div class="box bordered">
        <div class="box inner light-gray">
          <div class="box-header">
              <i class="icon-group"></i> CRM e Marketing - Relatório de KPI's
            </div>
        </div>

        <%= link_to 'Importar Dados', {:action => 'kpi_etl'}, :class => 'btn btn-small light-blue inverse', :title => "Importar Dados"  %>

        <div class="row-fluid">
          <div class="span12">
            <div class="padded">
              <div class="section-title">CAC (Custo de Aquisição de Clientes)</div>
              <div style="height: 100px">
              <%= simple_form_for :filtro_cac, :url => "/crm/relatorio_kpis", :remote => true, :html => {:class => 'span12 form-vertical filtro_relatorio'} do |f| %>
                <%= f.input :ano, :collection => ["2009", "2010", "2011", "2012", "2013"], :required => false, :label => "Ano", :prompt => "Selecione", :input_html => {:class => 'span2'}, :wrapper_html => {:class => ''} %>
                <%= f.button :submit, "Gerar Relatório" %>
              <% end %>
              </div>
              <div class="chart" id="chart_div" style="width: 100%; height: 330px;"></div>
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span12">
            <div class="padded">
              <div class="section-title">ROI (Retorno sobre Investimento)</div>
              <div style="height: 100px">
              <%= simple_form_for :filtro_roi, :url => "/crm/relatorio_kpis", :remote => true, :html => {:class => 'span12 form-vertical filtro_relatorio'} do |f| %>
                <%= f.input :ano, :collection => ["2009", "2010", "2011", "2012", "2013"], :required => false, :label => "Ano", :prompt => "Selecione", :input_html => {:class => 'span2'}, :wrapper_html => {:class => ''} %>
                <%= f.button :submit, "Gerar Relatório" %>
              <% end %>
              </div>
              <div class="chart" id="chart_div2" style="width: 100%; height: 330px;"></div>
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span12">
            <div class="padded">
              <div class="section-title">Receita por Campanha</div>
              <div style="height: 100px">
              <%= simple_form_for :filtro_campanha, :url => "/crm/relatorio_kpis", :remote => true, :html => {:class => 'span12 form-vertical filtro_relatorio'} do |f| %>
                <%= f.input :ano, :collection => ["2009", "2010", "2011", "2012", "2013"], :required => false, :label => "Ano", :prompt => "Selecione", :input_html => {:class => 'span2'}, :wrapper_html => {:class => ''} %>
                <%= f.button :submit, "Gerar Relatório" %>
              <% end %>
              </div>
              <div class="chart" id="chart_div3" style="width: 100%; height: 330px;"></div>
            </div>
          </div>
        </div>

      
      </div>
      
    </div>
  </div>
</div>
