<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">

      <div class="box bordered">
        <div class="box inner light-gray">
          <div class="box-header">
              <i class="icon-group"></i> CRM e Marketing - Relatório de KPI's
            </div>
        </div>

        <div class="row-fluid">
          <div class="span12">
            <div class="padded">
              <div class="section-title">E-mails recebidos por motivo</div>
              <div style="height: 200px">
              <%= simple_form_for :filtro_total, :url => "/crm/relatorio_sac_emails_motivo", :remote => true, :html => {:class => 'span12 form-vertical filtro_relatorio'} do |f| %>
                <%= f.input :ano, :collection => ["2009", "2010", "2011", "2012", "2013"], :required => false, :label => "Ano", :prompt => "Selecione", :input_html => {:class => 'span2'}, :wrapper_html => {:class => ''} %>
                <%= f.input :mes, :collection => CalendarioMes::MESES.invert, :required => false, :label => "Mês", :prompt => "Selecione", :input_html => {:class => 'span2'}, :wrapper_html => {:class => ''} %>
                <%= f.button :submit, "Gerar Relatório" %>
              <% end %>
              </div>
              <div class="chart" id="chart_div" style="width: 100%; height: 330px;"></div>
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span12">
            <div class="padded">
              <div class="section-title">Tempo total de atendimento por motivo</div>
              <div style="height: 200px">
              <%= simple_form_for :filtro_tempo_medio, :url => "/crm/relatorio_sac_emails_motivo", :remote => true, :html => {:class => 'span12 form-vertical filtro_relatorio'} do |f| %>
                <%= f.input :ano, :collection => ["2009", "2010", "2011", "2012", "2013"], :required => false, :label => "Ano", :prompt => "Selecione", :input_html => {:class => 'span2'}, :wrapper_html => {:class => ''} %>
                <%= f.input :mes, :collection => ["01", "02", "03", "04", "05", "06", "07", "08", "09", "10", "11", "12"], :required => false, :label => "Mês", :prompt => "Selecione", :input_html => {:class => 'span2'}, :wrapper_html => {:class => ''} %>
                <%= f.button :submit, "Gerar Relatório" %>
              <% end %>
              </div>
              <div class="chart" id="chart_div2" style="width: 100%; height: 330px;"></div>
            </div>
          </div>
        </div>
      
      </div>
      
    </div>
  </div>
</div>
