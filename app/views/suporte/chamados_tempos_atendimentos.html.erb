<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <div class="box bordered">

        <div class="box inner light-gray">
          <div class="box-header">
              <i class="icon-group"></i> Suporte - Relatórios dos Chamados
            </div>
        </div>

        <div class="row-fluid">
          <div class="span12">
            <div class="padded">
              <div class="section-title">Tempo Médio de Atendimento</div>
              <div style="height: 200px">
              <%= simple_form_for :filtro_tempo_medio_atendimento, :url => "/suporte/chamados_tempos_atendimentos", :remote => true, :html => {:class => 'span12 form-vertical filtro_relatorio'} do |f| %>
                <%= f.input :ano, :collection => ["2009", "2010", "2011", "2012", "2013"], :required => false, :label => "Ano", :prompt => "Selecione", :input_html => {:class => 'span2'}, :wrapper_html => {:class => ''} %>
                <%= f.button :submit, "Gerar Relatório" %>
              <% end %>
              </div>
              <div class="chart" id="chart_div" style="width: 100%; height: 330px;"></div>
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span12">
            <div class="padded">
              <div class="section-title">Número de Chamados Estourados</div>
              <div style="height: 200px">
              <%= simple_form_for :filtro_chamados_estourados , :url => "/suporte/chamados_tempos_atendimentos", :remote => true, :html => {:class => 'span12 form-vertical filtro_relatorio'} do |f| %>
                <%= f.input :ano, :collection => ["2009", "2010", "2011", "2012", "2013"], :required => false, :label => "Ano", :prompt => "Selecione", :input_html => {:class => 'span2'}, :wrapper_html => {:class => ''} %>
                <%= f.button :submit, "Gerar Relatório" %>
              <% end %>
              </div>
              <div class="chart" id="chart_div2" style="width: 100%; height: 330px;"></div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
