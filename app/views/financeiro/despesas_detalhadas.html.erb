<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">

      <div class="box bordered">
        <div class="box inner light-gray">
          <div class="box-header">
              <i class="icon-group"></i> Financeiro - Relatórios de Despesas
            </div>
        </div>

        <div class="row-fluid">
          <div class="span12">
            <div class="padded">
              <div class="section-title">Distribuição de Despesas</div>
              <div style="height: 100px">
              <%= simple_form_for :filtro_1, :url => "/financeiro/despesas_detalhadas", :remote => true, :html => {:class => 'span12 form-vertical filtro_relatorio'} do |f| %>
                <%= f.input :ano, :collection => ["2009", "2010", "2011", "2012", "2013"], :required => false, :label => "Ano", :prompt => "Selecione", :input_html => {:class => 'span2'}, :wrapper_html => {:class => ''} %>
                <%= f.input :mes, :collection => {"Jan" => 1, "Fev" => 2, "Mar" => 3, "Abr" => 4, "Mai" => 5, "Jun" => 6,
                  "Jul" => 7, "Ago" => 8, "Set" => 9, "Out" => 10, "Nov" => 11, "Dez" => 12}, :required => false, :label => "Mês", :prompt => "Selecione", :input_html => {:class => 'span2'}, :wrapper_html => {:class => ''} %>
                <%= f.button :submit, "Gerar Relatório" %>
              <% end %>
              </div>
              <div class="chart" id="chart_div" style="width: 100%; height: 330px;"></div>
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span12">
            <div class="padded">
              <div class="section-title">Despesas por Departamento</div>
              <div style="height: 190px">
              <%= simple_form_for :filtro_2, :url => "/financeiro/despesas_detalhadas", :remote => true, :html => {:class => 'span12 form-vertical filtro_relatorio'} do |f| %>
                               <%= f.input :ano, :collection => ["2009", "2010", "2011", "2012", "2013"], :required => false, :label => "Ano", :prompt => "Selecione", :input_html => {:class => 'span2'}, :wrapper_html => {:class => ''} %>
                <%= f.input :mes, :collection => {"Jan" => 1, "Fev" => 2, "Mar" => 3, "Abr" => 4, "Mai" => 5, "Jun" => 6,
                  "Jul" => 7, "Ago" => 8, "Set" => 9, "Out" => 10, "Nov" => 11, "Dez" => 12}, :required => false, :label => "Mês", :prompt => "Selecione", :input_html => {:class => 'span2'}, :wrapper_html => {:class => ''} %>
                <%= f.button :submit, "Gerar Relatório" %>
              <% end %>
              </div>
              <div class="chart" id="chart_div2" style="width: 100%; height: 330px;"></div>
            </div>
          </div>
        </div>
      
      </div>
      
    </div>
  </div>
</div>
