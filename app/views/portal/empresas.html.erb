<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">

      <div class="box bordered">
        <div class="box inner light-gray">
          <div class="box-header">
              <i class="icon-group"></i> Portal - Relatórios de Empresas
            </div>
        </div>

        <div class="row-fluid">
          <div class="span12">
            <div class="padded">
              <div class="section-title">Vagas e Contratações</div>
              <div style="height: 190px">
              <%= simple_form_for :filtro_1, :url => "/portal/empresas", :remote => true, :html => {:class => 'span12 form-vertical filtro_relatorio'} do |f| %>
                <div class="control-group string optional filtro__empresa"><label class="string optional control-label" for="filtro_1_empresa">Empresa</label><div class="controls"><input list="empresas" class="string optional span2" id="filtro_1_empresa" name="filtro_1[empresa]" size="50" type="text">
                  <datalist id="empresas">
                    <% Empresa.all.each do |empresa| %>
                    <option value="<%= empresa.nome %>">
                    <% end %>
                  </datalist></div></div>
                <%= f.input :ano, :collection => ["2009", "2010", "2011", "2012", "2013"], :required => false, :label => "Ano", :prompt => "Selecione", :input_html => {:class => 'span2'}, :wrapper_html => {:class => ''} %>
                <%= f.button :submit, "Gerar Relatório" %>
              <% end %>
              </div>
              <div class="chart" id="chart_div" style="width: 100%; height: 330px;"></div>
            </div>
          </div>
        </div>

